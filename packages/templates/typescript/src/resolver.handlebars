{{#if @root.config.noNamespaces}}
{{ toComment description }}
export interface {{ name }}Resolvers {
  {{#each fields}}
  {{ name }}?: {{ ../name }}{{ getFieldResolverName name }}; {{ toComment description }}
  {{/each}}
}

{{#each fields}}
export type {{ ../name }}{{ getFieldResolverName name }}<R = {{convertedType this}}> = {{ getFieldResolver this }};

{{~# if hasArguments }}

export interface {{ ../name }}{{ toPascalCase name }}Args {
{{#each arguments}}
  {{ name }}{{ getOptionals this }}: {{ convertedType this }}; {{ toComment description }}
{{/each}}
}

{{/if}}
{{/each}}
{{else}}
{{ toComment description }}
export namespace {{ name }}Resolvers {
  export interface Resolvers {
    {{#each fields}}
    {{ name }}?: {{ getFieldResolverName name }}; {{ toComment description }}
    {{/each}}
  }

  {{#each fields}}
  export type {{ getFieldResolverName name }}<R = {{convertedType this}}> = {{ getFieldResolver this }};

  {{~# if hasArguments }}

  export interface {{ toPascalCase name }}Args {
  {{#each arguments}}
    {{ name }}{{ getOptionals this }}: {{ convertedType this }}; {{ toComment description }}
  {{/each}}
  }

  {{/if}}
  {{/each}}
  
}
{{/if}}